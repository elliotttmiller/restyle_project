# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=false
DJANGO_SETTINGS_MODULE=backend.settings.prod

# Database (Production)
DATABASE_URL=postgres://user:password@host:port/dbname

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ADDITIONAL_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Redis (for Celery and caching)
REDIS_URL=redis://localhost:6379/0

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Error Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENVIRONMENT=production

# eBay API Credentials
EBAY_PRODUCTION_APP_ID=your-ebay-app-id
EBAY_PRODUCTION_CERT_ID=your-ebay-cert-id
EBAY_PRODUCTION_CLIENT_SECRET=your-ebay-client-secret
EBAY_PRODUCTION_REFRESH_TOKEN=your-ebay-refresh-token
EBAY_PRODUCTION_USER_TOKEN=your-ebay-user-token

# Google Cloud Credentials
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_PRODUCT_SET_ID=your-product-set-id

# AWS Credentials (if needed)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION_NAME=us-east-1

# Pinecone (if used)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=your-index-name